<h2 class="text-center mb-4">Recently Added Composers</h2>

<% if (composers && composers.length) { %>
  <div class="row g-4">
    <% composers.forEach((composer) => { %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm">
          <% if (composer.portrait) { %>
            <img src="<%= composer.portrait %>" 
                 class="card-img-top" 
                 alt="<%= composer.name %>" 
                 style="object-fit: cover; height: 200px;">
          <% } %>
          <div class="card-body">
            <h5 class="card-title">
              <a href="/composers/<%= composer._id %>" class="text-decoration-none text-dark">
                <%= composer.completeName || composer.name %>
              </a>
            </h5>
            <p class="card-text">
              <small class="text-muted">Added <%= composer.createdAt.toDateString() %></small>
            </p>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } else { %>
  <div class="alert alert-info text-center">No composers have been added yet.</div>
<% } %>

<hr class="my-5">

<h2 class="text-center mb-4">Recently Added Works</h2>

<% if (works && works.length) { %>
  <div class="row g-4">
    <% works.forEach((work) => { %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">
              <a href="/works/<%= work._id %>" class="text-decoration-none text-dark">
                <%= work.title %>
              </a>
            </h5>
            <p class="card-text">
              <small class="text-muted">Added <%= work.createdAt.toDateString() %></small>
            </p>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } else { %>
  <div class="alert alert-info text-center">No works have been added yet.</div>
<% } %>
