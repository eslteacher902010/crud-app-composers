<div class="position-relative py-5 bg-light angled-bg">
  <div class="container position-relative">
    <h1 class="text-center mb-4">My Favorite Composers</h1>

    <% if (composers && composers.length) { %>
      <div class="row g-4">
        <% composers.forEach((composer) => { %>
          <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm">
              <% if (composer.portrait) { %>
                <img src="<%= composer.portrait %>" 
                     alt="<%= composer.name %> portrait" 
                     class="card-img-top img-fluid" 
                     style="object-fit: cover; height: 250px;">
              <% } %>
              <div class="card-body text-center">
                <h5 class="card-title mb-0">
                  <a href="/composers/<%= composer.source === 'local' || !composer.apiId ? composer._id : composer.apiId %>" 
                     class="stretched-link text-decoration-none text-dark">
                    <%= composer.completeName || composer.name %>
                  </a>
                </h5>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="alert alert-info text-center">
        You donâ€™t have any favorite composers yet.
      </div>
    <% } %>
  </div>
</div>
