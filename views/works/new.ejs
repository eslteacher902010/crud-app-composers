<!-- views/works/new.ejs -->
<section class="treble">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg">
          <div class="card-body">
            <h1 class="text-center mb-4">Add a New Work</h1>
            <form action="/works" method="POST">

              <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" name="title" class="form-control" required>
              </div>

              <div class="mb-3">
                <label for="subtitle" class="form-label">Subtitle</label>
                <input type="text" id="subtitle" name="subtitle" class="form-control">
              </div>

              <div class="mb-3">
                <label for="yearComposed" class="form-label">Year Composed</label>
                <input type="number" id="yearComposed" name="yearComposed" class="form-control">
              </div>

              <div class="mb-3">
                <label for="catalogueSystem" class="form-label">Catalogue System</label>
                <input type="text" id="catalogueSystem" name="catalogueSystem" placeholder="e.g. K, BWV" class="form-control">
              </div>

              <div class="mb-3">
                <label for="catalogueNumber" class="form-label">Catalogue Number</label>
                <input type="text" id="catalogueNumber" name="catalogueNumber" class="form-control">
              </div>

              <div class="mb-3">
                <label for="genre" class="form-label">Genre</label>
                <input type="text" id="genre" name="genre" class="form-control">
              </div>

              <div class="mb-3">
                <label for="youTube" class="form-label">YouTube Link</label>
                <input type="text" id="youTube" name="youTube" class="form-control">
              </div>

              <div class="mb-3">
                <label for="composerId" class="form-label">Composer</label>
                <select id="composerId" name="composerId" class="form-select" required>
                  <% composers.forEach(function(comp) { %>
                    <option value="<%= comp._id %>">
                      <%= comp.completeName || comp.name %>
                    </option>
                  <% }) %>
                </select>
              </div>

              <div class="d-grid">
                <button type="submit" class="btn btn-primary">Add Work</button>
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
